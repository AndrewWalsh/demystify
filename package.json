{
  "name": "@demystify",
  "private": true,
  "description": "the demystify monorepo",
  "scripts": {
    "build": "turbo run build",
    "build:nocache": "turbo run build --no-cache --force",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:update": "turbo run test:update",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "dependencies": {
    "@wailsio/runtime": "latest"
  },
  "devDependencies": {
    "prettier": "^3.5.2",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "npm@11.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
